<ul id="posts">
    <% @posts.each do |post| %>
    <li>
        <div class="post-card">
            <%= image_tag post.thumbnail_url, class: "card-image" %>
            <div class="card-text">
                <h2><%= link_to post.title, post %></h2>
                <p><%= post.text.truncate 350, separator: ' ' %></p>
            </div>
        </div>
    </li>
    <% end %>
</ul>